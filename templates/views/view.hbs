    <div class="main_wrapper">
        <div class="container-fluid">


            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <h3 class="secondTitle">View list of expenses :</h3>
                    {{!-- {{{expenses}}} --}}
                </div>
                <div class="col-lg-6 col-md-6 text-right"></div>
            </div>
            <!-- content section -->
            <div class="content_section">
                <div >
                    <form action="/filter" method="post" class="row justify-content-md-center">
                        <div class="col-lg-5 col-md-6 col-sm-12">
                            <div class="form-floating ct_form_field">

                                <select class="form-control" name="category">
                                    <option value="chooseOne">Choose one...</option>
                                    <option value="All">All</option>
                                    <option value="Education">Education</option>
                                    <option value="Medical">Medical</option>
                                    <option value="Bills">Bills</option>
                                    <option value="Shopping">Shopping</option>
                                    <option value="Emergency">Emergency</option>
                                    <option value="Transport">Transport</option>
                                    <option value="Other">Other</option>
                                </select>
                                <label for="floating_input">Catogory:</label>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-floating ct_form_field">
                                        <input type="date" class="form-control" id="floatingInput" name="from" placeholder="TO">
                                        <label for="floatingInput">From:</label>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-floating ct_form_field">
                                        <input type="date" class="form-control" id="floatingInput" name="to" placeholder="TO">
                                        <label for="floatingInput">To:</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 mt-20 text-center">
                                     <a href="/filter"><button type="submit" class="btn btn-block btn-lg btn-primary text-center btn-block mb15">Go</button></a>
                                    {{!-- <button class="btn btn-block btn-lg btn-primary text-center btn-block mb15"
                                        type="submit">Go</button> --}}
                                </div>
                                <div class=" col-lg-6 mt-20 text-center">
                                    <a href="/index" class="btn btn-block btn-lg btn-primary text-center btn-block mb15"
                                        type="button">Back</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <section class="content mt30">
                    <table class="table custom_table1">
                        <thead>
                            <tr class="color">
                                <th>Name</th>
                                <th>Category</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody id="expenseTable">
                            {{#expenses}}
                            <tr>
                                <td>{{name}}</td>
                                <td>{{category}}</td>
                                <td>{{date}}</td>
                                <td>{{amount}}</td>
                                <td>
                                    </form>
                                    <form action="/detete-expenses" method="post">
                                        <input type="text" name="_id" value="{{_id}}" hidden>
                                        <a href="/delete-express"><button type="submit"
                                                class="btn btn-danger">Delete</button>
                                        </a>
                                    </form>
                                </td>
                            </tr>
                            {{/expenses}}
                        </tbody>
                    </table>
                </section>

            </div>
</body>

</html>