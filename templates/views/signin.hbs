        <div class="login_form_sect">
            <h1 class="login_title"> Sign In</h1>
            
            
            <form action="/signin" method="POST">

            <div class="form-floating ct_form_field">
                <input type="text" name="email" class="form-control" id="floatingInput" placeholder="User ID" value="info@example.com">
                <label for="floatingInput">User ID</label>
            </div>
            <!-- <div class="text-right"><a href="forgot-user-ID.html" class="forgot_link">Forgot User ID</a></div> -->

            <div class="form-floating ct_form_field ct_form_icon_group">
                <input type="password" name="password" class="form-control" id="floatingInput" placeholder="Password">
                <span class="far fa-eye-slash" aria-hidden="true"></span>
                <label for="floatingInput">Password</label>
            </div>
            <div class="row">
                <div class="col">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                        <label class="custom-control-label" for="customCheck1">Save User ID</label>
                    </div>
                </div>
            </div>
 
            <div class="row mt15">
                <div class="col">
                    <a href="/index"><button class="btn btn-lg btn-primary btn-block text-center" type="submit">Sign
                        in</button></a></div>
                <div class="col">
                    <a href="/home" class="btn btn-lg blue-outline-btn btn-block text-center"
                        type="button">Cancel</a>
                </div>
            </div>
            </form>
            
            <div class="text-center mt20 mb10">
                Don't have a user ID?<br> <a href="/signup">Create one Now</a>
            </div>
         

            
        </div>
